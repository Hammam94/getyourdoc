<p id="notice"><%= notice %></p>

<h1>Listing Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Graduation year</th>
      <th>College</th>
      <th>Specialty</th>
      <th>Country</th>
      <th>City</th>
      <th>Address</th>
      <th>Telephone</th>
      <th>Examination cost</th>
      <th>Counseling cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.graduation_year %></td>
        <td><%= doctor.college %></td>
        <td><%= doctor.specialty %></td>
        <td><%= doctor.country %></td>
        <td><%= doctor.city %></td>
        <td><%= doctor.address %></td>
        <td><%= doctor.telephone %></td>
        <td><%= doctor.examination_cost %></td>
        <td><%= doctor.counseling_cost %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

